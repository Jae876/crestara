# cPanel/Shared Hosting PostgreSQL
# Get connection details from cPanel > Databases > PostgreSQL

DATABASE_URL="postgresql://cpanelusername_dbuser:password@localhost:5432/cpanelusername_crestara"

# Server
PORT=3001
NODE_ENV=production

# JWT (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=generate-a-random-64-character-string-here-for-production
JWT_EXPIRATION=3600
REFRESH_TOKEN_EXPIRATION=604800

# CORS  
CORS_ORIGIN=https://yourdomain.com

# Redis (Usually not available on shared hosting, use in-memory for small deployments)
REDIS_URL="memory://"

# Or use RedisGreen/similar service:
# REDIS_URL="redis://h:password@host.redis-cloud.com:port"
